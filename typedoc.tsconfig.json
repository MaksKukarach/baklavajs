{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2019",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "lib": ["DOM"]
    },
    "include": ["packages/*/src/*.ts", "packages/*/src/*.d.ts"],
    "exclude": ["node_modules", "**/dist/**", "**/test/**", "packages/full/**", "packages/renderer-vue/playground"]
}
